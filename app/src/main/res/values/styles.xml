<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowAnimationStyle">@style/Animation.LockScreen</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
    <style name="Animation.LockScreen" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/lock_screen_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/lock_screen_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/lock_screen_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/lock_screen_exit</item>
    </style>

    <style name="Theme.ActionBar" parent="android:Widget.DeviceDefault.Light.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:contentInsetStart">@dimen/actionbar_contentInsetStart</item>
    </style>
    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.DeviceDefault.Light.DialogWhenLarge">
        <!--item name="android:colorBackground">@android:color/white</item-->
        <!--item name="android:statusBarColor">@android:color/transparent</item-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>

        <item name="android:windowAnimationStyle">@style/Animation.LockScreen</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!--item name="preferenceBackgroundColor">@drawable/preference_background</item>-->
    </style>
    <style name="Theme.Button" parent="android:Widget.DeviceDefault.Light.Button"/>
    <style name="keyguard_text_shadow" parent="">
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">@font/samsungneonum3t</item>
        <item name="fontFamily">@font/samsungneonum3t</item>
    </style>
    <style name="list_title_text_style">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>
    <dimen name="actionbar_contentInsetStart">16dp</dimen>
</resources>